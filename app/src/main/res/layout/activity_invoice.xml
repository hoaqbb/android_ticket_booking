<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:orientation="vertical"
    tools:context=".activities.InvoiceActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="#fff"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:text="Invoice"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.012" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:paddingVertical="16dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:paddingVertical="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="5dp">
                    <ImageView
                        android:id="@+id/movieImage"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="3dp">

                    <TextView
                        android:id="@+id/txtMovieName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:text="This is name movie"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2D SUBTITLES"
                            android:textColor="@color/black"
                            android:textSize="10sp"/>
                        <Button
                            android:id="@+id/txtRoomName"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="7dp"
                            android:backgroundTint="@color/light_orange"
                            android:clickable="false"
                            android:text="L1"
                            android:textSize="10sp"
                            android:padding="0dp"
                            android:textAlignment="center"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtCinemaName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This is cinema name"
                        android:textColor="@color/black"
                        android:textSize="11sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="3dp">

                        <TextView
                            android:id="@+id/txtTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08:00"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="This is date"
                            android:textColor="@color/black"
                            android:textSize="11sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="449dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="3dp"
            android:text="Transaction Info"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="16dp"

            >

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="x2"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Ticket 2D"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtStartTime"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="08:00 - "
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtNameSeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="C7, C8"
                android:textColor="@color/black"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="3dp"
                android:text="Apply point Stars"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#FFFFFF"
                android:padding="3dp">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="Off 1,000 ₫/used Star"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"/>


            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="3dp"
                android:text="Payment Info"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:background="#FFFFFF"
                        android:paddingLeft="3dp"
                        android:paddingTop="15dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_marginStart="20dp"
                            android:text="Payment via Momo"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:lines="1"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="#FFFFFF"
                        android:padding="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_marginStart="20dp"
                            android:text="Payment via bank account"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:lines="1"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="#FFFFFF"
                        android:padding="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_marginStart="20dp"
                            android:text="Payment via VNPay wallet"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:lines="1"/>


                    </LinearLayout>
                </LinearLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:background="@color/white"/>

                    <RadioButton
                        android:id="@+id/radioButton4"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@color/white"
                        android:text="" />

                    <RadioButton
                        android:id="@+id/radioButton5"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@color/white"
                        android:checked="true"/>
                </RadioGroup>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Total: "
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="39dp"
            android:layout_gravity="bottom">
                <TextView
                    android:id="@+id/txtTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/light_orange"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₫"
                    android:textColor="@color/light_orange"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnPurchase"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/light_orange"
            android:text="Purchase"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />



</LinearLayout>


